{
  "name": "Tab Seperator",
  "version": "1.0",
  "description": " group pages into 'n' topics in a browser.",
  "permissions": [
    "declarativeContent",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/tab_selector16.png",
      "32": "images/tab_selector32.png",
      "48": "images/tab_selector48.png",
      "128": "images/tab_selector128.png"
    }
  },
  "icons": {
    "16": "images/tab_selector16.png",
    "32": "images/tab_selector32.png",
    "48": "images/tab_selector48.png",
    "128": "images/tab_selector128.png"
  },
  "manifest_version": 2
}