{
  "name": "Separatab",
  "version": "1.0",
  "description": "This extension allows you to group tabs into more useful chunks.",
  "permissions": [
    "tabs",
    "declarativeContent",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "script.js",
        "jquery-3.5.1.min.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/tab_selector16.png",
      "32": "images/tab_selector32.png",
      "48": "images/tab_selector48.png",
      "128": "images/tab_selector128.png"
    }
  },
  "icons": {
    "16": "images/tab_selector16.png",
    "32": "images/tab_selector32.png",
    "48": "images/tab_selector48.png",
    "128": "images/tab_selector128.png"
  },
  "manifest_version": 2
}